{
    "edit": {
        "command":"nvim"
    },
    "merge": {
        "command": "nvim",
        "args": ["-d", "{{ .Destination }}", "{{ .Source }}", "{{ .Target }}"]
    },
    "git":{
        "autoCommit": true,
        "autoPush": true,
        "commitMessageTemplateFile": ".commit_message.tmpl"
    }
}
